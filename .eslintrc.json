{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "xo"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "capitalized-comments": 0,
        "no-warning-comments": 0,
        "radix": 0,
        "quotes": [1, "double", {"avoidEscape": true, "allowTemplateLiterals": true}]
    }
}
